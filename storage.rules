rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Exercise files - authenticated users can read, teachers can write
    match /exercises/{planId}/{sessionId}/{exerciseId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    match /templates/{templateId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
